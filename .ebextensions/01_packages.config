packages:
  yum:
    # Build tools for compiling Python packages
    gcc: []
    make: []
    automake: []
    autoconf: []
    libtool: []

    # Required for Pillow (image processing)
    libjpeg-turbo-devel: []
    zlib-devel: []
    freetype-devel: []
    lcms2-devel: []
    libwebp-devel: []
    tcl-devel: []
    tk-devel: []
    harfbuzz-devel: []
    fribidi-devel: []

    # Compression libraries
    bzip2-devel: []
    xz-devel: []

    # Database client libraries
    mariadb-devel: []       # MySQL/MariaDB support
    postgresql-devel: []   # PostgreSQL support

    # Optional networking or SSL libraries (if needed)
    openssl-devel: []
    libffi-devel: []

commands:
  01-update-yum:
    command: yum -y update
